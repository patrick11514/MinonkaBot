{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "removeComments": true,
        "target": "ES2021",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@lib/*": ["src/lib/*"],
            "@components/*": ["src/components/*"],
            "@commands/*": ["src/commands/*"],
        }
    },
    "files": [
        "src/types/discord.d.ts",
        "src/types/environment.d.ts",
        "src/types/process.d.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}