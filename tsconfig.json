{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "removeComments": true,
        "target": "ES2022",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "paths": {
            "$/*": ["./src/*"],
            "$types/*": ["./src/types/*"],
            "$lib/*": ["./src/lib/*"],
            "$data/*": ["./src/data/*"]
        }
    },
    "files": ["src/types/process.d.ts"],
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
