{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "removeComments": true,
        "target": "ES2022",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "paths": {
            "$types": ["./src/types"],
            "$types/*": ["./src/types/*"],
            "$lib": ["./src/lib"],
            "$lib/*": ["./src/lib/*"],
            "$components": ["./src/components"],
            "$components/*": ["./src/components/*"]
        }
    },
    "files": ["src/types/discord.d.ts", "src/types/process.d.ts", "src/types/modules.d.ts"],
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
